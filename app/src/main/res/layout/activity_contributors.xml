<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContributorsActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/contributors"
        android:scaleType="centerCrop"/>

    <Button
        android:id="@+id/buttonContBack"
        android:layout_width="45sp"
        android:layout_height="45sp"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="20sp"
        android:background="@android:color/transparent" />

    <Button
        android:id="@+id/buttonLink1"
        android:layout_width="270sp"
        android:layout_height="80sp"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:layout_marginTop="236sp" />

    <Button
        android:id="@+id/buttonLink2"
        android:layout_width="270sp"
        android:layout_height="80sp"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:layout_below="@+id/buttonLink1"
        android:layout_marginTop="100sp" />

</RelativeLayout>